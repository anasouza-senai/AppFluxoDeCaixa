@model AppFluxoDeCaixa.Models.Fornecedor

@{
    ViewData["Title"] = "Deletar Fornecedores";
}

<h1 class="display-5 txt-light text-center">Deletar Cadastro de Fornecedores</h1>

<h3 class="mt-3 mb-3">Deseja excluir esse cadastro?</h3>
<div>
    <h4>Fornecedor</h4>
    <hr />

    <dl class="row">
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.CNPJ)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.CNPJ)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FornecedorId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
